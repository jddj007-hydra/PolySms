<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>PolySms</PackageId>
    <Version>1.0.0</Version>
    <Authors>PolySms Contributors</Authors>
    <Description>一个轻量级的多云短信发送SDK，支持阿里云和腾讯云，零第三方依赖</Description>
    <PackageProjectUrl>https://github.com/yourname/PolySms</PackageProjectUrl>
    <RepositoryUrl>https://github.com/yourname/PolySms</RepositoryUrl>
    <PackageTags>sms;aliyun;tencent;china;messaging</PackageTags>
    <PackageReleaseNotes>重构为单一包，使用HTTP直接调用，大幅减少包体积</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
  </ItemGroup>

</Project>